@model List<WatchList.WebUI.DTOs.MovieListDtos.ListMovieListDto>

@{
    ViewData["Title"] = "Film Listelerim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2 class="mb-4">Film Listelerim</h2>

<a asp-action="Create" class="btn btn-primary mb-4">+ Yeni Liste Oluştur</a>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var list in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@list.Title</h5>
                        <p class="card-text">
                            Paylaşım Durumu:
                            <strong class="text-@(list.IsShared ? "success" : "secondary")">
                                @(list.IsShared ? "Herkese Açık" : "Gizli")
                            </strong>
                        </p>
                        <p class="card-text">
                            Oluşturulma Tarihi: @list.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy")
                        </p>

                        <!-- Detaya Git butonu eklenebilir -->
                        <a asp-action="Details" asp-route-id="@list.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        Henüz hiç film listeniz yok. <a asp-action="Create">Buradan yeni bir liste oluşturabilirsiniz.</a>
    </div>
}
