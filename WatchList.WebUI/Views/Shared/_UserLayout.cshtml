@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WatchList</title>

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/User">
                    <i class="bi bi-film me-2"></i>WatchList
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Keşfet -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="Explore" asp-action="Index">Keşfet</a>
                        </li>
                        <!-- Filmler -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movie" asp-action="Index">Filmler</a>
                        </li>

                        <!-- Diziler -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Series" asp-action="Index">Diziler</a>
                        </li>
                        <!-- Listelerim -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Lists" asp-action="Index">Listelerim</a>
                        </li>
 
                    </ul>

                    <!-- Kullanıcı Menüsü -->
                    <ul class="navbar-nav ms-auto">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Register" asp-action="SignUp">
                                    <i class="bi bi-person-plus me-1"></i>Kayıt Ol
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Login" asp-action="SignIn">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person-circle me-1"></i>Profilim
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-white p-0 m-0">
                                        <i class="bi bi-box-arrow-right me-1"></i>Çıkış Yap
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- İçerik -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center text-muted small">
            &copy; @DateTime.Now.Year - WatchList | Film ve Dizi Takip Uygulaması
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
