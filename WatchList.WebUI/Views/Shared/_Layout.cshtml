<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WatchList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-film me-2"></i>WatchList
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Explore">Keşfet</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Filmler
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Movie" asp-action="Index">Tüm Filmlerim</a></li>
                                <li><a class="dropdown-item" asp-controller="Movie" asp-action="Watched">İzlediğim Filmler</a></li>
                                <li><a class="dropdown-item" asp-controller="Movie" asp-action="Unwatched">İzlemediğim Filmler</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Movie" asp-action="Create">Yeni Film Ekle</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="seriesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Diziler
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="seriesDropdown">
                                <li><a class="dropdown-item" asp-controller="Series" asp-action="Index">Tüm Dizilerim</a></li>
                                <li><a class="dropdown-item" asp-controller="Series" asp-action="Watching">İzlediğim Diziler</a></li>
                                <li><a class="dropdown-item" asp-controller="Series" asp-action="Finished">Bitirdiğim Diziler</a></li>
                                <li><a class="dropdown-item" asp-controller="Series" asp-action="Planned">İzlemeyi Planladığım</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Series" asp-action="Create">Yeni Dizi Ekle</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="listsDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Listelerim
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="listsDropdown">
                                <li><a class="dropdown-item" asp-controller="MovieList" asp-action="Index">Film Listelerim</a></li>
                                <li><a class="dropdown-item" asp-controller="SeriesList" asp-action="Index">Dizi Listelerim</a></li>
                                <li><a class="dropdown-item" asp-controller="TierList" asp-action="Index">Tier Listelerim</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="MovieList" asp-action="Create">Yeni Film Listesi</a></li>
                                <li><a class="dropdown-item" asp-controller="SeriesList" asp-action="Create">Yeni Dizi Listesi</a></li>
                                <li><a class="dropdown-item" asp-controller="TierList" asp-action="Create">Yeni Tier Listesi</a></li>
                            </ul>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - WatchList - Film ve Dizi İzleme
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>