@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Paneli - WatchListly</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex min-vh-100" id="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark text-white flex-shrink-0 p-3" style="width: 240px;">
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-camera-reels fs-3 me-2"></i>
                <span class="fs-4 fw-bold">WatchListly</span>
            </div>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item mb-1">
                    <a href="/Admin/Movie/Index" class="nav-link text-white">
                        <i class="bi bi-film me-2"></i> Filmler
                    </a>
                </li>
                <li class="nav-item mb-1">
                    <a href="/Admin/Role/Index" class="nav-link text-white">
                        <i class="bi bi-shield-lock me-2"></i> Roller
                    </a>
                </li>
                <li class="nav-item mb-1">
                    <a href="/Admin/RoleAssign/Index" class="nav-link text-white">
                        <i class="bi bi-person-badge me-2"></i> Kullanıcılar
                    </a>
                </li>
                <li class="nav-item mt-4">
                    <a href="/Logout" class="nav-link text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i> Çıkış
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1 bg-light">
            <header class="bg-white shadow-sm px-4 py-3 border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Admin Paneli</h5>
                    <span class="text-muted small">Hoş geldiniz!</span>
                </div>
            </header>

            <main class="container-fluid py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        #sidebar .nav-link {
            padding: 10px 15px;
            transition: background 0.2s ease, color 0.2s ease;
            border-radius: 0.375rem;
        }

            #sidebar .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: #f8f9fa;
            }

            #sidebar .nav-link.active,
            #sidebar .nav-link:focus {
                background-color: #0d6efd;
                color: white;
            }

        #page-content-wrapper {
            overflow-x: hidden;
        }

        @@media (max-width: 768px) {
            #wrapper {
                flex-direction: column;
            }

            #sidebar {
                width: 100%;
                padding: 1rem;
            }

            #page-content-wrapper {
                padding-top: 1rem;
            }
        }
    </style>
</body>
</html>
