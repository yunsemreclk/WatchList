@model IEnumerable<WatchList.WebUI.DTOs.MovieDtos.ListMovieDto>
@{
    ViewData["Title"] = "Filmlerim";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Filmlerim</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Yeni Film Ekle
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" id="movieSearch" class="form-control" placeholder="Film ara...">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="btn-group float-end">
                <a asp-action="Index" class="btn btn-outline-primary">Tümü</a>
                <a asp-action="Watched" class="btn btn-outline-success">İzlenenler</a>
                <a asp-action="Unwatched" class="btn btn-outline-warning">İzlenmeyenler</a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>Henüz film eklenmemiş</h4>
            <p>Film eklemek için "Yeni Film Ekle" butonuna tıklayabilirsiniz.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4" id="movieGrid">
            @foreach (var movie in Model)
            {
                <div class="col movie-item">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(movie.PosterUrl))
                        {
                            <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                                <i class="bi bi-film" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text">
                                <small class="text-muted">@movie.ReleaseYear</small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                                <form asp-action="DeleteMovie" asp-controller="Movie" asp-route-id="@movie.Id"
                                      onsubmit="return confirm('Bu filmi silmek istediğinize emin misiniz?');"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#movieSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $(".movie-item").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}









